<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Net5LectureNotes.ModularDesign</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @* @Html.Partial("~/Views/Home/Partials/_HeaderPartial.cshtml") *@
    @* @Html.RenderPartial("~/Views/Home/Partials/_HeaderPartial.cshtml"); *@

    <partial name="~/Views/Home/Partials/_HeaderPartial.cshtml" />

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- Partial View çağırıyoruz ve Model olarak ViewData kullanıyoruz -->
                <partial name="~/Views/Home/Partials/_SlaytPartial.cshtml" model="@(ViewData["Images"])" />

                @* Artık _Layout.cshtml içinde çağırırken Model göndermeye gerek yok! *@
                @* ViewComponent kendi Model’ini kendi oluşturduğu için bağımsız çalışıyor! *@
                @await Component.InvokeAsync("Slayt")
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                <ul class="list-group">
                    <partial name="~/Views/Home/Partials/_LeftMenuPartial.cshtml" />
                </ul>
            </div>

            <div class="col-md-8">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <partial name="~/Views/Home/Partials/_FooterPartial.cshtml" />
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
